<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <Company>ntics</Company>
    <Product>Controls for WPF Core</Product>
    <Version>3.1.1</Version>
    <Authors>Serhiy Lakas</Authors>
    <Copyright>2018 Serhiy Lakas</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/sabatex/ntics</RepositoryUrl>
    <PackageTags>#WPF #Controls</PackageTags>
    <PackageReleaseNotes>migrate from dotnet 4.6.1</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AvalonLibrary" Version="2.4.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ntics" Version="3.1.3" />
  </ItemGroup>

</Project>
